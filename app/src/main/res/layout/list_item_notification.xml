<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_hall"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <TextView
            android:id="@+id/txt_hall_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/georgiapro_cond_bold"
            android:text="Hall Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_msg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/georgiapro_cond_regular"
            android:text="message title"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_msg_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:text="message description" />

    <TextView
        android:id="@+id/txt_msg_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:text="time" />
</RelativeLayout>
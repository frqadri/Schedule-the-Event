<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".BookingPageActivity">

    <ImageView
        android:id="@+id/img_hall"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/hall" />

    <TextView
        android:id="@+id/txt_hall_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="260dp"
        android:fontFamily="@font/helveticaworld_bold"
        android:text="Hall Name"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txt_hall_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="290dp"
        android:fontFamily="@font/helveticaworld_regular"
        android:text="Hall Location"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/txt_hall_price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="105dp"
        android:fontFamily="@font/helveticaworld_regular"
        android:text="Price"
        android:textAlignment="textEnd"
        android:textColor="@color/Primary_Purple"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="290dp"
        android:fontFamily="@font/helveticaworld_regular"
        android:text="/PerHead"
        android:textAlignment="textEnd"
        android:textColor="@color/Primary_Purple"
        android:textSize="25dp" />


</RelativeLayout>